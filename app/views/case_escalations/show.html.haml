- model_class = CaseEscalation
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:case_detail_id) + ':'
  %br
  = @case_escalation.case_detail_id
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @case_escalation.user_id
%p
  %strong= model_class.human_attribute_name(:approved_on) + ':'
  %br
  = @case_escalation.approved_on
%p
  %strong= model_class.human_attribute_name(:approved) + ':'
  %br
  = @case_escalation.approved

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), case_escalations_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_case_escalation_path(@case_escalation), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), case_escalation_path(@case_escalation), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
