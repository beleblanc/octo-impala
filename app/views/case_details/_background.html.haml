.well
  .pull-right
    %h3= @model_class.human_attribute_name(:status) + ':' + @case_detail.status.name if @case_detail.status.present?
  .cf
  %p
    %strong= @model_class.human_attribute_name(:prosecutor_id) + ':'
    %br
    = @case_detail.user.name if @case_detail.user.present?
  %p
    %strong= @model_class.human_attribute_name(:judge_id) + ':'
    %br
    = @case_detail.judge
  %p
    %strong= @model_class.human_attribute_name(:rcci) + ':'
    %br
    = @case_detail.rcci
  %p
    %strong= @model_class.human_attribute_name(:court_case_number) + ':'
    %br
    = @case_detail.court_case_number
  %p
    %strong= @model_class.human_attribute_name(:court_type) + ':'
    %br
    = @case_detail.court_type
    %p
      %strong Charges
      %br
      -@case_detail.charges.each do |charge|
        ="#{charge} "
  
  %p
    %strong= @model_class.human_attribute_name(:date_of_offence) + ':'
    %br
    = @case_detail.date_of_offence
  %p
    %strong= @model_class.human_attribute_name(:region_id) + ':'
    %br
    = @case_detail.region
  %p
    %strong= @model_class.human_attribute_name(:constituency_id) + ':'
    %br
    = @case_detail.constituency
  %p
    %strong= @model_class.human_attribute_name(:date_reported) + ':'
    %br
    = @case_detail.date_reported
  %p
    %strong= @model_class.human_attribute_name(:date_submitted) + ':'
    %br
    = @case_detail.date_submitted
  %p
    %strong= @model_class.human_attribute_name(:comment) + ':'
    %br
    = @case_detail.comment  
  %p
    %strong= @model_class.human_attribute_name(:date_trial_commenced) + ':'
    %br
    = @case_detail.date_trial_commenced
  %p
    %strong= @model_class.human_attribute_name(:date_trial_concluded) + ':'
    %br
    = @case_detail.date_trial_concluded