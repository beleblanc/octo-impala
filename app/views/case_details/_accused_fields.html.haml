%fieldset
  .well
    =f.input :first_name ,wrapper_html:{class:"pull-left"}
    =f.input :surname,wrapper_html:{class:"pull-left offset1"}
    .cf
    =f.input :sex,collection:[["Male","M"],["Female","F"]],wrapper_html:{class:"pull-left "}
    =f.input :date_of_birth, as: :string, input_html:{class:"datepicker"},wrapper_html:{class:"pull-left offset1"}
    .cf
    =f.input :known_to_complainant, as: :boolean,wrapper_html:{class:"pull-left "}
    =f.input :relation_id, collection: Relation.all, label_method: :name, value_method: :id,wrapper_html:{class:"pull-left offset1"}
    =f.hidden_field :_destroy
    .cf
    =link_to "Remove", '#', class: "remove_fields btn btn-mini btn-danger"
    .cf